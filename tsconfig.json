{
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
      ],
    "include": ["src/**/*.ts", "src/**/*.js"],
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "checkJs": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es6"
        ],
        "module": "commonjs",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "rootDir": "./src"
    }
}
